    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Date picker (spinner) -->
    <DatePicker
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Danh sÃ¡ch -->
